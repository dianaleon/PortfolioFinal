<?xml version="1.0" encoding="utf-8"?>
<com.portfolio.components.menu xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:gravity="top"
    android:orientation="vertical"
    android:visibility="invisible" 
    android:weightSum="10.0" >
	    <LinearLayout
        android:id="@+id/header"
        style="@style/customHeaderTitleSubtitle"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3.0"
        android:layout_gravity="center_vertical"
        android:background="@drawable/gradient_gold"
        android:gravity="center_vertical"
        android:orientation="vertical" >

       
       
        <TextView
            android:id="@+id/tittle_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/tittle_app"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sub_tittle_app"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/subtittle_app"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceMedium" />
		 
	</LinearLayout>


	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="6.5"
	    android:orientation="vertical" >

    <TextView
        android:id="@+id/itemMenu1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal|top"
        android:background="@color/goldLgt"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/name_page"
        android:textColor="#FFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/itemMenu2"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal|top"
        android:background="#000"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/itemMenu10"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:translationY="2dp"
        android:paddingBottom="2dp" />

    <TextView
        android:id="@+id/itemMenu3"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal|top"
        android:background="#000"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/itemMenu11"
        android:textColor="#FFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/itemMenu4"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal|top"
        android:background="#000"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/itemMenu12"
        android:textColor="#FFF"
        android:textSize="20sp" />
	
    <TextView
        android:id="@+id/itemMenu5"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal|top"
        android:background="#000"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/itemMenu13"
        android:textColor="#FFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/itemMenu6"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal|top"
        android:background="#000"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/itemMenu14"
        android:textColor="#FFF"
        android:textSize="20sp" />

	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" >

</LinearLayout>
</LinearLayout>
<LinearLayout
    style="@style/customHeaderTitleSubtitle"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="0.5"
    android:layout_gravity="bottom"
    android:background="@drawable/gradient_gold"
    android:gravity="bottom"
    android:orientation="vertical" >

        <Button
            android:id="@+id/buttonMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/menu"
            android:gravity="center_vertical|center_horizontal|fill_vertical|bottom|right"
            android:minHeight="40dp"
            android:minWidth="40dp" />

    </LinearLayout>
</com.portfolio.components.menu>