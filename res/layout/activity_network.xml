<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical" 
    android:weightSum="10.0" >

    <LinearLayout
        android:id="@+id/header"
        style="@style/customHeaderTitleSubtitle"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3.0"
        android:layout_gravity="center_vertical"
        android:background="@drawable/gradient_gold"
        android:gravity="center_vertical"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/tittle_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="@string/tittle_app"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sub_tittle_app"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/subtittle_app"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceMedium" />
                 
                
        </LinearLayout>

        <LinearLayout
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="7.0"
            android:background="#000"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical" >

        	<LinearLayout
        	    android:id="@+id/container"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:layout_gravity="center_vertical|center_horizontal"
        	    android:gravity="center_vertical|center_horizontal"
        	    android:orientation="vertical" >

		         <TableRow
		             android:id="@+id/tableRow1"
		             android:layout_width="wrap_content"
		             android:layout_height="110dp"
		             android:layout_gravity="center_vertical|center_horizontal" >
	        	
	           		<Button
					    android:id="@+id/facebook"
					    android:layout_width="90dp"
			            android:layout_height="90dp"
			          	android:text="@string/network1" />
	           		
	           		<Button
					    android:id="@+id/twitter"
					    android:layout_width="90dp"
			            android:layout_height="90dp"
					    android:text="@string/network2"/>
	            	
	            	<Button
					    android:id="@+id/linkedin"
					    android:layout_width="90dp"
			            android:layout_height="90dp"
					    android:text="@string/network3" />
					
					
			</TableRow>
            
            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:layout_gravity="center_vertical|center_horizontal" >

	            	<Button
					    android:id="@+id/google"
					    android:layout_width="90dp"
			            android:layout_height="90dp"
					    android:text="@string/network4" />
					<Button
					    android:id="@+id/pinterest"
					    android:layout_width="90dp"
			            android:layout_height="90dp"
					    android:layout_gravity="center_horizontal"
					    android:text="@string/network5" />
					<Button
					    android:id="@+id/pictures"
					    android:layout_width="90dp"
			            android:layout_height="90dp"
					    android:layout_gravity="center_horizontal"
					    android:text="@string/network6" />
	          </TableRow>
		       
                </LinearLayout>
        </LinearLayout>
        <LinearLayout
        style="@style/customHeaderTitleSubtitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/gradient_gold"
        android:orientation="vertical" >

        <Button
            android:id="@+id/buttonMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/menu"
            android:gravity="center_vertical|center_horizontal|fill_vertical|bottom|right" />
		
    </LinearLayout>
    
</LinearLayout>