<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_img_list"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="false"
    android:scrollbarStyle="outsideInset"
    android:weightSum="10.0" >

   <LinearLayout
       android:id="@+id/header"
       style="@style/customHeaderTitleSubtitle"
       android:layout_width="fill_parent"
       android:layout_height="0dp"
       android:layout_gravity="top|center_vertical|center_horizontal"
       android:layout_weight="3.0"
       android:background="@drawable/gradient_gold"
       android:gravity="center_vertical"
       android:orientation="vertical" >
     	
     	<TextView
            android:id="@+id/tittle_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="@string/tittle_app"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sub_tittle_app"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/subtittle_app"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

	<LinearLayout
	    android:id="@+id/body"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="6.5"
	    android:background="#000"
	    android:orientation="vertical"
	    android:scrollbarStyle="outsideOverlay"
	    android:scrollbars="vertical" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:background="@drawable/gradient_light_gold"
                >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="120sp"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_launcher"
                    android:contentDescription="@string/desc" />
				 <LinearLayout
            		android:layout_width="fill_parent"
           			android:layout_height="wrap_content"
            		android:orientation="vertical" >
	                <TextView
	                    android:id="@+id/tittle_item_list"
	                    android:layout_width="fill_parent"
	                    android:layout_height="30dp"
	                    android:paddingLeft="10dp"
	                    android:text="@string/tittle_app"
	                    android:textAppearance="?android:attr/textAppearanceMedium"
	                    android:textColor="#000000"
	                    android:textSize="23sp"
                    	android:textStyle="bold" />

	                 <TextView
	                     android:id="@+id/text_item0_list"
	                     android:layout_width="fill_parent"
	                     android:layout_height="wrap_content"
	                     android:paddingLeft="10dp"
	                     android:text="@string/text_example"
	                     android:textAppearance="?android:attr/textAppearanceMedium"
	                     android:textColor="#ffffff"
	                     android:textSize="20sp" />
                
				 </LinearLayout>
                
            </TableRow>
	    
	    
	    <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:background="@drawable/gradient_light_gold"
                >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="120sp"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_launcher"
                    android:contentDescription="@string/desc" />
				 <LinearLayout
            		android:layout_width="fill_parent"
           			android:layout_height="wrap_content"
            		android:orientation="vertical" >
	                <TextView
	                    android:id="@+id/tittle_item_list"
	                    android:layout_width="fill_parent"
	                    android:layout_height="30dp"
	                    android:paddingLeft="10dp"
	                    android:text="@string/tittle_app"
	                    android:textAppearance="?android:attr/textAppearanceMedium"
	                    android:textColor="#000000"
	                    android:textSize="23sp"
                    	android:textStyle="bold" />

	                 <TextView
	                     android:id="@+id/text_item0_list"
	                     android:layout_width="fill_parent"
	                     android:layout_height="wrap_content"
	                     android:paddingLeft="10dp"
	                     android:text="@string/text_example"
	                     android:textAppearance="?android:attr/textAppearanceMedium"
	                     android:textColor="#ffffff"
	                     android:textSize="20sp" />
                
				 </LinearLayout>
                
            </TableRow>
	  
	    
	</LinearLayout>
	<include
        android:id="@+id/layout_menu"
        layout="@layout/menu_layout" />
 	<LinearLayout
        style="@style/customHeaderTitleSubtitle"
        android:layout_width="fill_parent"
       	android:layout_height="0dp"
    	android:layout_weight="0.5"
        android:layout_gravity="bottom"
        android:background="@drawable/gradient_gold"
        android:orientation="vertical" >

        <Button
            android:id="@+id/buttonMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/menu"
            android:gravity="center_vertical|center_horizontal|fill_vertical|bottom|right" />

    </LinearLayout>
       
</LinearLayout>